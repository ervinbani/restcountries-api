{
  "compilerOptions": {
    /* ==== File Structure ==== */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ==== Target Environment ==== */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2017",
    "lib": ["DOM", "ES2020"],

    /* ==== Output ==== */
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    /* ==== Strict Mode ==== */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* ==== Module Behavior ==== */
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,

    /* ==== Not Needed ==== */
    "jsx": "none",
    "types": []
  },
  "include": ["src/**/*.ts"]
}
